<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_view_flag"
        android:layout_width="80dp"
        android:layout_height="50dp"
         />

    <TextView
        android:id="@+id/txt_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_flag"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_view_flag"
        android:text="EUR"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_rate_for_euro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_currency_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txt_currency_name"
        android:layout_marginStart="48dp"
        android:text="50.0"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"/>

    <!--
     android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="41dp"
    -->


</RelativeLayout>